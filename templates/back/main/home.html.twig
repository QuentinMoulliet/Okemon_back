{% extends 'base.html.twig' %}

{% block title %}O'kémon | Admin{% endblock %}

{% block body %}

    <h3 class="display-4 text-center mt-5 text-white"><strong>O'kémon test</strong></h3>
    <div class="d-flex justify-content-center">
    {% include "back/fragments/_flash_message.html.twig" %}
    </div>
<div class="container my-4">
    <div class="row mt-5 d-flex justify-content-center ">
        <div class="col-12 col-md-4">
            <div class="card text-white mb-3 p-2 bg-dark border border-white">
                <div class="text-center display-5"><strong>Articles :</strong></div>
                <div class="card-body">
                    <table class="table table-striped table-dark text-white text-center align-middle">
                        <thead>
                            <tr>
                                <th class="border border-white">#</th>
                                <th class="border border-white">Titre</th>
                                <th class="border border-white">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for review in reviews %}
                                <tr>
                                    <th class="border border-white">{{review.id}}</th>
                                    <td class="border border-white">{{review.title[:20] ~'...' }}</td>
                                    <td class="d-flex justify-content-center gap-2 border border-white">
                                        <a href="{{ path('app_back_review_edit', {'id': review.id}) }}" class="btn btn fa fa-pencil btn-warning"></a>
                                        <form method="post" action="{{ path('app_back_review_delete_from_main', {'id': review.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer cet article?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                                            <button class="btn btn-danger fa fa-trash-o"></button>
                                        </form>
                                    </td>
                                </tr>
                        {% endfor %}
                        </tbody> 
                    </table>
                    <div class="d-grid gap-2">
                        <a href="{{path('app_back_review_index')}}" class="btn btn-secondary">Voir plus</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card text-white mb-3 p-2 bg-dark border border-white">
                <div class="text-center display-5"><strong>Commentaires :</strong></div>
                <div class="card-body">
                    <table class="table table-striped table-dark text-white text-center align-middle">
                        <thead>
                            <tr>
                                <th class="border border-white">#</th>
                                <th class="border border-white">Contenu</th>
                                <th class="border border-white">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for comment in comments %}
                                <tr>
                                    <th class="border border-white">{{comment.id}}</th>
                                    <td class="border border-white">{{comment.content[:20] ~'...' }}</td>
                                        <td class="d-flex justify-content-center gap-2 border border-white">
                                        <a href="{{ path('app_back_comment_edit', {'id': comment.id}) }}" class="btn btn fa fa-pencil btn-warning"></a>
                                        <form method="post" action="{{ path('app_back_comment_delete_from_main', {'id': comment.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce commentaire?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                            <button class="btn btn-danger fa fa-trash-o"></button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="d-grid gap-2">
                        <a href="{{path('app_back_comment_index')}}" class="btn btn-secondary">Voir plus</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card text-white mb-3 p-2 bg-dark border border-white">
                <div class="text-center display-5"><strong>Utilisateurs :</strong></div>
                <div class="card-body">
                    <table class="table table-striped table-dark text-white text-center align-middle">
                        <thead>
                            <tr>
                                <th class="border border-white">#</th>
                                <th class="border border-white">Pseudo</th>
                                <th class="border border-white">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                                <tr>
                                    <th class="border border-white">{{user.id}}</th>
                                    <td class="border border-white">{{user.nickname}}</td>
                                        <td class="d-flex justify-content-center gap-2 border border-white">
                                        <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn btn fa fa-pencil btn-warning"></a>
                                        <form method="post" action="{{ path('app_back_user_delete_from_main', {'id': user.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer cet utilisateur?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button class="btn btn-danger fa fa-trash-o"></button>
                                        </form>
                                    </td>
                                </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="d-grid gap-2">
                        <a href="{{path('app_back_user_index')}}" class="btn btn-secondary">Voir plus</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}