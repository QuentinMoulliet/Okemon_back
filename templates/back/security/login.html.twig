{% extends 'base.html.twig' %}

{% block title %}Admin | Login {% endblock %}

{% block body %}
	<h3 class="display-4 text-center mt-5 text-white"><strong>Bienvenue sur la page d'administration d'O'kémon</strong></h3>
	<h5 class="text-center mt-1">Veuillez vous connecter afin d'accéder à tous les services.</h5>
	{% if error %}
	<div class="d-flex justify-content-center mt-3">
		<div class="alert alert-danger alert-dismissible fade show col-3 text-center" role="alert">
            <span>Identifiants invalides</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
	</div>
	{% endif %}
	<form action="{{ path('app_login') }}" method="post" class="container mt-3 col-4">
		<div class="mb-3">
			<label class="form-label" for="username">Email</label>
			<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}">
		</div>

		<div class="mb-3">

			<label class="form-label" for="password">Mot de passe</label>
			<input class="form-control" type="password" id="password" name="_password">
		</div>

		{# If you want to control the URL the user is redirected to on success
		        <input type="hidden" name="_target_path" value="/account"> #}
	<div class="d-flex justify-content-center">
		<button class="btn btn-outline-light col-4" type="submit">Se connecter</button>
	</div>
	</form>
{% endblock %}