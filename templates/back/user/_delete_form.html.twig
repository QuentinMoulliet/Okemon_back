<form method="post" action="{{ path('app_back_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer «{{ user.nickname }}» ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <div class="d-flex justify-content-center">
        <button class="btn btn-danger col-2 mt-1">Supprimer</button>
    </div>
</form>
